{
  "name": "kaa",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "author": "Kaa <info@kaapro.dev>",
  "license": "SEE LICENSE IN LICENSE",
  "description": "Kaa is an AI powered rental property platform for the kenyan market.",
  "scripts": {
    "check": "oxlint",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "prepare~": "husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "bun biome format",
    "check-types": "turbo run check-types",
    "dev:web": "turbo -F @kaa/web dev",
    "dev:app": "turbo -F @kaa/app dev",
    "dev:api": "turbo -F @kaa/api dev",
    "dev:docs": "turbo -F @kaa/docs dev",
    "release": "semantic-release",
    "commit~": "cz"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@evilmartians/lefthook": "^1.13.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@turbo/gen": "^2.5.6",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-cmyr-config": "^2.1.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-conventional-changelog-cmyr": "^1.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "oxlint": "^1.15.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.8",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "ultracite": "^5.3.4"
  },
  "keywords": [
    "template",
    "monorepo",
    "fullstack",
    "typescript",
    "elysiajs",
    "mongoose",
    "shadcn",
    "mongodb",
    "react",
    "bun",
    "pwa"
  ],
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.2.21",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog-cmyr"
    }
  },
  "changelog": {
    "language": "zh"
  },
  "overrides": {
    "compare-func": "^2.0.0"
  },
  "homepage": "https://github.com/Kelvince01/kaa#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kelvince01/kaa.git"
  },
  "bugs": {
    "url": "https://github.com/Kelvince01/kaa/issues"
  },
  "trustedDependencies": [
    "@evilmartians/lefthook",
    "@firebase/util",
    "@kaa/docs",
    "@sentry/cli",
    "@tailwindcss/oxide",
    "core-js",
    "core-js-pure",
    "esbuild",
    "msgpackr-extract",
    "protobufjs",
    "sharp"
  ]
}
