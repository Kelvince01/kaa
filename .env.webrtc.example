# WebRTC Recording Configuration
# Copy this file to .env and configure your storage provider

# ============================================
# STORAGE PROVIDER CONFIGURATION
# ============================================
# Options: local, s3, gcs, vercel-blob
RECORDING_STORAGE_PROVIDER=local

# ============================================
# LOCAL STORAGE (Default)
# ============================================
RECORDING_OUTPUT_DIR=./recordings

# ============================================
# AWS S3 STORAGE
# ============================================
# Uncomment and configure if using S3
# RECORDING_STORAGE_PROVIDER=s3
# RECORDING_S3_BUCKET=my-video-recordings
# RECORDING_S3_REGION=us-east-1
# RECORDING_S3_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
# RECORDING_S3_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
# RECORDING_S3_ENDPOINT=https://s3.amazonaws.com

# ============================================
# GOOGLE CLOUD STORAGE
# ============================================
# Uncomment and configure if using GCS
# RECORDING_STORAGE_PROVIDER=gcs
# RECORDING_GCS_BUCKET=my-video-recordings
# RECORDING_GCS_PROJECT_ID=my-project-123456
# RECORDING_GCS_KEY_FILENAME=/path/to/service-account-key.json
# Or use credentials JSON:
# RECORDING_GCS_CREDENTIALS={"type":"service_account","project_id":"..."}

# ============================================
# VERCEL BLOB STORAGE
# ============================================
# Uncomment and configure if using Vercel Blob
# RECORDING_STORAGE_PROVIDER=vercel-blob
# BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxxx

# ============================================
# RECORDING QUALITY SETTINGS
# ============================================
RECORDING_VIDEO_BITRATE=2000000
RECORDING_AUDIO_BITRATE=128000
RECORDING_FRAMERATE=30
RECORDING_WIDTH=1280
RECORDING_HEIGHT=720
RECORDING_FORMAT=webm
RECORDING_VIDEO_CODEC=vp8
RECORDING_AUDIO_CODEC=opus

# ============================================
# WEBRTC CONFIGURATION
# ============================================
# STUN/TURN Servers (comma-separated)
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302

# TURN Server (optional, for better connectivity)
# WEBRTC_TURN_SERVER=turn:turn.example.com:3478
# WEBRTC_TURN_USERNAME=username
# WEBRTC_TURN_CREDENTIAL=password

# ============================================
# PERFORMANCE SETTINGS
# ============================================
MAX_PARTICIPANTS_PER_ROOM=50
QUALITY_MONITORING_INTERVAL=5000
RECORDING_CHUNK_SIZE=1000000

# ============================================
# SECURITY SETTINGS
# ============================================
# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=info
ENABLE_RECORDING_METRICS=true
METRICS_PORT=9090
