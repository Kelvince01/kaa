{
  "expo": {
    "name": "Kaa Mobile",
    "slug": "kaa-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "com.kaa.mobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kaa.mobile",
      "infoPlist": {
        "NSFaceIDUsageDescription": "This app uses Face ID to securely log you in to your account."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#008b52",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.kaa.mobile",
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro",
      "build": {
        "babel": {
          "include": []
        }
      },
      "config": {
        "notification": {
          "serviceWorkerPath": "firebase-messaging-sw.js"
        }
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "kaa-native",
          "organization": "optiflow-softwares"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Kaa SaaS to use Face ID to log you in."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#0891b2"
        }
      ],
      [
        "expo-secure-store",
        {
          "requireAuthentication": true
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "514a30a3-d1a4-486a-92e3-32014b65d708"
      }
    },
    "notification": {
      "vapidPublicKey": "BE-gudd5MEoeWaUkLS9tX8FHquRJbS4ECF1I2UJBZm7cAh_FGAljiA3MiXrMnniGClws8qnCMQa2v1Q3yAuGQKo"
    },
    "owner": "kelvince"
  }
}
