# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1
NEXT_PUBLIC_REACT_SCAN="true"

# HTTP Client Configuration
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_RETRY_MAX_ATTEMPTS=3
NEXT_PUBLIC_RETRY_BASE_DELAY=1000
NEXT_PUBLIC_RETRY_MAX_DELAY=10000
NEXT_PUBLIC_RETRY_BACKOFF_FACTOR=2

# Cache Configuration
NEXT_PUBLIC_CACHE_ENABLED=true
NEXT_PUBLIC_CACHE_DEFAULT_TTL=300000
NEXT_PUBLIC_CACHE_MAX_SIZE=100

# Circuit Breaker Configuration
NEXT_PUBLIC_CIRCUIT_BREAKER_ENABLED=true
NEXT_PUBLIC_CB_FAILURE_THRESHOLD=5
NEXT_PUBLIC_CB_RECOVERY_TIMEOUT=60000
NEXT_PUBLIC_CB_MONITORING_PERIOD=60000

# Security Configuration
NEXT_PUBLIC_REQUEST_SIGNING_KEY=your-dev-signing-key-change-in-production
NEXT_PUBLIC_ENABLE_REQUEST_SIGNING=false
NEXT_PUBLIC_ENABLE_CSRF=true

# Authentication Configuration
NEXT_PUBLIC_ACCESS_TOKEN_EXPIRY=15
NEXT_PUBLIC_REFRESH_TOKEN_EXPIRY=7
NEXT_PUBLIC_MAX_LOGIN_ATTEMPTS=5
NEXT_PUBLIC_LOCKOUT_DURATION=30
NEXT_PUBLIC_SESSION_TIMEOUT=480
NEXT_PUBLIC_RATE_LIMIT_WINDOW=15
NEXT_PUBLIC_MAX_REQUESTS_PER_WINDOW=100
NEXT_PUBLIC_COOKIE_DOMAIN=localhost

# Monitoring Configuration
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_METRICS_INTERVAL=60000

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_NAME=Kaa
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_BUILD_NUMBER=1
NEXT_PUBLIC_APP_BUILD_DATE=$(date +%Y%m%d%H%M%S)

# External Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here
NEXT_PUBLIC_MAPBOX_SESSION_TOKEN=your_session_token_here

# Stripe Configuration
NEXT_PUBLIC_STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key

# Push Notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key