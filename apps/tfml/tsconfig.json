{
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "paths": {
      "#/*": [
        "./src/*"
      ],
      "~/*": [
        "../api/src/*"
      ]
    },
    "types": [
      "bun"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "../api/src/features/auth/auth.plugin.ts",
    "../api/src/features/auth/session.controller.ts",
    "../api/src/features/rbac/rbac.plugin.ts",
    "../api/src/plugins/security.plugin.ts",
    "../api/src/services/session-store.ts",
    "../api/src/database/mongoose.setup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}