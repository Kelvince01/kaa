{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "root": true,
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/wrangler.jsonc",
      "!**/.source"
    ]
  },
  "extends": ["ultracite"],
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "noMagicNumbers": "off",
        "useBlockStatements": "off",
        "noNestedTernary": "off",
        "noParameterProperties": "off",
        "noEnum": "off",
        "useFilenamingConvention": "off"
      },
      "suspicious": {
        "noConsole": "off",
        "noExplicitAny": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off"
      },
      "correctness": {
        "noUnusedVariables": "off"
      },
      "nursery": {
        "useMaxParams": "off",
        "noShadow": "off"
      },
      "performance": {
        "noBarrelFile": "off",
        "noNamespaceImport": "off"
      }
    }
  }
}
